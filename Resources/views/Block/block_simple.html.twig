{% extends 'PrestaCMSCoreBundle:Block:base_block.html.twig' %}

{% block block %}
    {% if (settings.title|length) %}
        <{{ settings.title_level }} class="cms-block-title">{{ settings.title }}</{{ settings.title_level }}>
    {% endif %}

    {% if (settings.content|length) %}
        <div class="cms-block-content">
            {{ settings.content|raw }}
        </div>
    {% endif %}

    {% if ((settings.link_label|length) and (settings.link_destination|length)) %}
        <div class="cms-block-link-container">
            <a href="{% if (block.isAdminMode) %}#{% else %}{{ path(settings.link_destination) }}{% endif %}">{{ settings.link_label }}</a>
        </div>
    {% endif %}
{% endblock %}
