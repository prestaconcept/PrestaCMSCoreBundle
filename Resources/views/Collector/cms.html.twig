{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block toolbar %}
    <div class="sf-toolbar-block">
        <div class="sf-toolbar-icon">
            <a href="{{ path('_profiler', { 'token': token, 'panel': name }) }}">
                {# fake image span #}<span style="width:0px; height: 28px; vertical-align: middle;"></span>
                <span class="sf-toolbar-status">{{ 'PrestaCMS' }}</span>
            </a>
        </div>
        <div class="sf-toolbar-info">
            {% if collector.currentWebsite %}
                <div class="sf-toolbar-info-piece">
                    <b>Website</b>
                    <span>{{ collector.currentWebsite.name ~ ' - ' ~ collector.currentWebsite.locale }}</span>
                </div>
            {% endif %}

            {% if collector.currentTheme %}
                <div class="sf-toolbar-info-piece">
                    <b>Theme</b>
                    <span>{{ collector.currentTheme.name }}</span>
                </div>
            {% endif %}

            {% if collector.currentPage %}
                <div class="sf-toolbar-info-piece">
                    <b>Page</b>
                    <span>{{ collector.currentPage.name }}</span>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block menu %}
    <span class="label">
        <span class="icon"><img src="data:image/png;base64," alt="" /></span>
        <strong>PrestaCMS</strong>
    </span>
{% endblock %}

{% block panel %}
    {% if collector.currentWebsite %}
        <h2>Website</h2>
        <table>
            <tr>
                <th>Name</th>
                <td>{{ collector.currentWebsite.name }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ collector.currentWebsite.path }}</td>
            </tr>
            <tr>
                <th>Locale</th>
                <td>{{ collector.currentWebsite.locale }}</td>
            </tr>
        </table>
    {% endif %}

    {% if collector.currentTheme %}
        <h2>Theme</h2>
        <table>
            <tr>
                <th>Name</th>
                <td>{{ collector.currentTheme.name }}</td>
            </tr>
        </table>
    {% endif %}

    {% if collector.currentPage %}
        <h2>Page</h2>
        <table>
            <tr>
                <th>Name</th>
                <td>{{ collector.currentPage.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ collector.currentPage.type }}</td>
            </tr>
        </table>
    {% endif %}
{% endblock %}
